    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Upload Bot
        document.getElementById('uploadForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData();
            formData.append('bot_name', document.getElementById('botName').value);
            formData.append('main_file', document.getElementById('mainFile').value);
            formData.append('file', document.getElementById('botFile').files[0]);

            try {
                const response = await fetch('/api/upload-bot', {
                    method: 'POST',
                    body: formData
                });
                const data = await response.json();
                if (response.ok) {
                    alert('‚úÖ Bot uploaded successfully!');
                    location.reload();
                } else {
                    alert('‚ùå Error: ' + data.error);
                }
            } catch (error) {
                alert('Error uploading: ' + error);
            }
        });

        // Start Bot
        async function startBot(botId) {
            try {
                const response = await fetch(`/api/bot/${botId}/start`, {method: 'POST'});
                const data = await response.json();
                alert(data.message || data.error);
                location.reload();
            } catch (error) {
                alert('Error: ' + error);
            }
        }

        // Stop Bot
        async function stopBot(botId) {
            try {
                const response = await fetch(`/api/bot/${botId}/stop`, {method: 'POST'});
                const data = await response.json();
                alert(data.message || data.error);
                location.reload();
            } catch (error) {
                alert('Error: ' + error);
            }
        }

        // View Logs
        async function viewLogs(botId) {
            try {
                const response = await fetch(`/api/bot/${botId}/logs`);
                const data = await response.json();
                const logsList = document.getElementById('logsList');
                logsList.innerHTML = data.logs.map(log => 
                    `<p><small><strong>${log.timestamp}</strong>: ${log.message}</small></p>`
                ).join('') || '<p>No logs yet</p>';
                new bootstrap.Modal(document.getElementById('logsModal')).show();
            } catch (error) {
                alert('Error: ' + error);
            }
        }

        // Purchase Plan
        function purchasePlan(botId) {
            const plans = {
                '1month': { price: '‚Ç±100', duration: '1 Month' },
                '3month': { price: '‚Ç±250', duration: '3 Months' },
                '6month': { price: '‚Ç±450', duration: '6 Months' },
                '1year': { price: '‚Ç±800', duration: '1 Year' }
            };
            
            let html = '<div>';
            for (const [key, plan] of Object.entries(plans)) {
                html += `<button class="btn btn-success w-100 mb-2" onclick="completePurchase('${botId}', '${key}')">${plan.duration} - ${plan.price}</button>`;
            }
            html += '</div>';
            
            document.getElementById('planOptions').innerHTML = html;
            new bootstrap.Modal(document.getElementById('purchaseModal')).show();
        }

        // Complete Purchase (TODO: Add Stripe/PayPal)
        async function completePurchase(botId, planId) {
            try {
                const response = await fetch(`/api/purchase/${planId}`, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({bot_id: botId})
                });
                const data = await response.json();
                alert(data.message || data.error);
                location.reload();
            } catch (error) {
                alert('Error: ' + error);
            }
        }
    </script>
</body>
